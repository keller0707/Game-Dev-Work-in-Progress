// calls at start of execution
// init var, data, ect.
function _init()
	msg = "hello world" -- create var with a assigned text
	x=40 y=64           -- create var to store x, y pos
	dx=1 dy=1           -- create var to store x, y direction
end

// calls every frame
function _update()
	-- update current directoin
	x+=dx y+=dy
	
	-- check if x position is out of bounds
	if x<1 or x>128-#msg*4 then
		-- flip direction
		dx*=-1
		
	-- check if y position is out of bounds
	elseif y<1 or y>127-5 then
		-- flip direction
		dy*=-1
	end
end

// class every frame
// draw out object
function _draw()
	cls(1)
	print(msg,x,y,8+dx,8+dy)
end
